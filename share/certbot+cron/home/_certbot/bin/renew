#!/bin/sh -e

##
# variables
myhome=$(dirname $(realpath $(dirname "$0")))

##
# main
set -x
certbot renew \
    --manual \
    --manual-auth-hook "${myhome}"/libexec/add-txt-record
    --preferred-challenges dns \
    --logs-dir "${myhome}/log" \
    --config-dir "${myhome}" \
    --work-dir "${myhome}"
